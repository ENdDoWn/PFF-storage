# AWS Configuration
AWS_REGION=us-east-1
AWS_ACCESS_KEY_ID=your_access_key_here
AWS_SECRET_ACCESS_KEY=your_secret_key_here

# DynamoDB Configuration
DYNAMODB_TABLE_NAME=PFF_Storage_Table

# S3 Configuration
S3_BUCKET_NAME=pff-storage-bucket

# Cognito Configuration
COGNITO_USER_POOL_ID=us-east-1_xxxxxxxxx
COGNITO_CLIENT_ID=your_client_id_here
COGNITO_CLIENT_SECRET=your_client_secret_here

# SES Configuration
SES_FROM_EMAIL=noreply@yourdomain.com

# Application Configuration
NODE_ENV=development
PORT=3001
JWT_SECRET=your_jwt_secret_key_here_change_in_production
CORS_ORIGIN=http://localhost:5173

# CodePipeline Configuration (Optional)
CODEPIPELINE_NAME=pff-storage-pipeline
CODEPIPELINE_BUCKET=pff-codepipeline-artifacts
